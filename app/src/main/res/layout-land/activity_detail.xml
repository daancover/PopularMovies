<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin" >
    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.movieclub.DetailActivity" >

        <ProgressBar
            android:id="@+id/pb_progress_bar"
            android:layout_height="48dp"
            android:visibility="invisible"
            android:layout_marginStart="16dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_width="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <include
            android:id="@+id/movie_header"
            layout="@layout/landscape_movie_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/MediumText"
            tools:layout_conversion_absoluteX="16dp"
            tools:layout_conversion_absoluteY="32dp"
            tools:layout_conversion_absoluteWidth="560dp"
            tools:layout_conversion_absoluteHeight="34dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_header"
            android:layout_marginTop="16dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_trailers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteX="16dp"
            tools:layout_conversion_absoluteY="66dp"
            tools:layout_conversion_absoluteWidth="560dp"
            tools:layout_conversion_absoluteHeight="165dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_overview"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.52"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>